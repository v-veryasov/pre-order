<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="vveryasov" id="20210416-001">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="customer"/>
            </not>
        </preConditions>
        <createTable tableName="customer" >
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="login" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(35)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(40)">
                <constraints nullable="true"/>
            </column>
            <column name="registration_date" type="datetime">
                <constraints nullable="true"/>
            </column>
            <column name="last_activity_date" type="datetime">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="customer"/>
        </rollback>
    </changeSet>
    <!--    employee -->
</databaseChangeLog>